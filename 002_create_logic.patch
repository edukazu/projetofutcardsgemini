+import random
+
+# Estados do Jogo
+STATE_KICKOFF = "KICKOFF"        # Sorteio e posicionamento inicial
+STATE_WAITING_PASS = "WAITING_PASS" # Jogador escolhendo pra quem passar
+STATE_MATCH_LOGIC = "MATCH_LOGIC"   # O jogo normal (batalha)
+
+class Player:
+    def __init__(self, name, team, passing, x, y):
+        self.name = name
+        self.team = team  # 'home' ou 'away'
+        self.passing = passing  # Atributo principal para o kickoff
+        self.x = x
+        self.y = y
+        self.has_ball = False
+        # Placeholder para renderização futura
+        self.rect = None 
+
+    def __repr__(self):
+        return f"<{self.name} ({self.team}) Pass:{self.passing}>"
+
+class MatchManager:
+    def __init__(self):
+        self.state = STATE_KICKOFF
+        self.home_team = []
+        self.away_team = []
+        self.ball_holder = None
+        self.selected_target = None # Quem vai receber o passe
+
+    def add_player(self, player):
+        if player.team == 'home':
+            self.home_team.append(player)
+        else:
+            self.away_team.append(player)
+
+    def start_match(self):
+        """
+        Executa a lógica inicial: Sorteio -> Melhor Passador -> Posse
+        """
+        if self.state != STATE_KICKOFF:
+            return
+
+        # 1. Cara ou Coroa (50/50)
+        winner_team_name = random.choice(['home', 'away'])
+        winning_team_list = self.home_team if winner_team_name == 'home' else self.away_team
+
+        print(f"[DEBUG] Sorteio: Time {winner_team_name} ganhou a posse.")
+
+        # 2. Encontrar jogador com maior atributo de Passe
+        # Ordena a lista pelo atributo passing (do maior para o menor) e pega o primeiro
+        best_passer = max(winning_team_list, key=lambda p: p.passing)
+
+        # 3. Dar a posse de bola
+        self.ball_holder = best_passer
+        self.ball_holder.has_ball = True
+        
+        # 4. Mudar estado para esperar o clique do jogador
+        self.state = STATE_WAITING_PASS
+        print(f"[DEBUG] Bola com {best_passer.name} (Passe: {best_passer.passing}). Aguardando escolha do alvo.")
+
+    def execute_pass(self, target_player):
+        # Logica futura: A bola viaja até o alvo
+        # Por enquanto, teleporte imediato para testar a lógica
+        if self.ball_holder and target_player:
+            print(f"[DEBUG] Passe realizado de {self.ball_holder.name} para {target_player.name}")
+            self.ball_holder.has_ball = False
+            self.ball_holder = target_player
+            self.ball_holder.has_ball = True
+            
+            # Inicia a lógica de batalha
+            self.state = STATE_MATCH_LOGIC
+            print("[DEBUG] Estado alterado para MATCH_LOGIC")
+
